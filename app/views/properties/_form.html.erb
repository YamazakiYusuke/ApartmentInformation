<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= form.label :物件名 %></p>
    <p><%= form.text_field :title %></p>
  </div>

  <div class="field">
    <p><%= form.label :賃料 %></p>
    <P><%= form.number_field :price %>円</p>
  </div>

  <div class="field">
    <p><%= form.label :住所 %></p>
    <p><%= form.text_area :adress %></p>
  </div>

  <div class="field">
    <p><%= form.label :築年数 %></p>
    <p><%= form.number_field :old %>年</p>
  </div>

  <div class="field">
    <p><%= form.label :備考 %></p>
    <p><%= form.text_area :content %></p>
  </div>

  <br>
  <br>
  <% station_number = 1 %>
  <%= form.fields_for :stations do |station_form| %>

    <h3><%= "最寄り駅#{station_number}" %></h3>

    <div class="field">
      <p><%= station_form.label :路線 %></p>
      <p><%= station_form.text_field :line %></p>
    </div>

    <div class="field">
      <p><%= station_form.label :駅名 %></p>
      <p><%= station_form.text_field :name %></p>
    </div>

    <div class="field">
      <p><%= station_form.label :徒歩分数 %></p>
      <p><%= station_form.text_field :distance %></p>
    </div>
    
    <br>
    <% station_number += 1 %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
