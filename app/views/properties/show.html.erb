
<p>
  <strong>物件名:</strong>
  <%= @property.title %>
</p>

<p>
  <strong>値段:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.adress %>
</p>

<p>
  <strong>Old:</strong>
  <%= @property.old %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.content %>
</p>

<br>
<br>
<% station_number = 1 %>
<% @property.stations.each do |station| %>
  <h3><%= "最寄り駅#{station_number}" %></h3>
  <p>
    <strong>路線名:</strong>
    <%= station.line %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= station.name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= station.distance %>
  </p>
  <br>
  <% station_number += 1 %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
